<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>

        <!-- TABLE LIST -->
        <keyValueCollection id="tables">
            <properties>
                <property name="id"/>
                <property name="name"/>
            </properties>
        </keyValueCollection>

        <!-- COLUMN LIST -->
        <keyValueCollection id="columns">
            <properties>
                <property name="column"/>
                <property name="type"/>
                <property name="pk" datatype="boolean"/>
            </properties>
        </keyValueCollection>

    </data>

    <content>
        <vbox width="100%" height="100%">
            <h2 text="Danh sách bảng mẫu"/>
            <split width="100%" height="100%">
                <!-- LEFT: TABLE LIST -->
                <vbox width="30%" spacing="false" padding="true">

                    <listBox id="tableList"
                             itemsContainer="tables"/>
                </vbox>

                <!-- RIGHT: COLUMN DETAIL -->
                <vbox width="70%" padding="true">
                    <dataGrid id="columnGrid"
                              dataContainer="columns"
                              width="100%"
                              height="100%">
                        <columns>
                            <column property="column" header="COLUMN"/>
                            <column property="type" header="TYPE"/>
                            <column property="pk" header="PK"/>
                        </columns>
                    </dataGrid>

                    <hbox width="100%" justifyContent="END" spacing="true">
                        <button id="createSchema" text="Tạo bản sao" themeNames="primary"/>
                    </hbox>
                </vbox>

            </split>
        </vbox>
    </content>
</fragment>
